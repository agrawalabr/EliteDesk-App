<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.elitedesk.MainLayoutController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10px;">
            <Label fx:id="welcomeLabel" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"
                   alignment="CENTER"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Available Spaces" fx:id="availableSpacesButton" 
                        onAction="#showAvailableSpaces" 
                        style="-fx-font-size: 14px; -fx-padding: 8px 20px; -fx-background-radius: 5px;"/>
                <Button text="My Reservations" fx:id="reservedSpacesButton" 
                        onAction="#showReservedSpaces"
                        style="-fx-font-size: 14px; -fx-padding: 8px 20px; -fx-background-radius: 5px;"/>
                <Button text="Logout" fx:id="logoutButton" 
                        onAction="#handleLogout"
                        style="-fx-font-size: 14px; -fx-padding: 8px 20px; -fx-background-radius: 5px; -fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="contentArea">
            <!-- Content will be loaded here -->
        </StackPane>
    </center>
</BorderPane> 