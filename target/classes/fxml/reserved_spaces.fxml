<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.elitedesk.ReservedSpacesController"
            prefHeight="600.0" prefWidth="1000.0">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="My Reservations" style="-fx-font-size: 24px;"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Refresh" onAction="#handleRefresh" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TableView fx:id="reservationsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="spaceNameColumn" text="Space Name" prefWidth="150"/>
                    <TableColumn fx:id="spaceLocationColumn" text="Location" prefWidth="150"/>
                    <TableColumn fx:id="spaceTypeColumn" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="startTimeColumn" text="Start Time" prefWidth="200"/>
                    <TableColumn fx:id="endTimeColumn" text="End Time" prefWidth="200"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane> 